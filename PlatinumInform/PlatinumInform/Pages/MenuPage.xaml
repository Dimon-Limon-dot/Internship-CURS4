<Page x:Class="PlatinumInform.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlatinumInform.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnProduct" Content="Изделия" FontSize="22" Width="240" Height="40" Margin="12" Click="btnProduct_Click"/>
            <Button x:Name="btnPrice" Content="Цена" FontSize="22" Width="240" Height="40" Margin="12" Click="btnPrice_Click"/>
            <Button x:Name="btnReport" Content="Отчетность" FontSize="22" Width="240" Height="40" Margin="12" Click="btnReport_Click"/>
            <Button x:Name="btnAbout" Content="О программе" FontSize="22" Width="240" Height="40" Margin="12" Click="btnAbout_Click"/>
        </StackPanel>
    </Grid>
</Page>
