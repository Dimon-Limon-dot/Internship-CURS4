<Page x:Class="PlatinumInform.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlatinumInform.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин" FontSize="22" Width="100" Margin="7"/>
                <TextBox x:Name="tbLogin" FontSize="22" Width="220" Margin="7"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль" FontSize="22" Width="100" Margin="7"/>
                <PasswordBox x:Name="tbPassword" FontSize="22" Width="220" Margin="7"/>
            </StackPanel>
            <Button x:Name="btnEnter" Content="Войти" FontSize="22" Width="200" Margin="0,20,0,0" Click="btnEnter_Click"/>
        </StackPanel>
    </Grid>
</Page>
